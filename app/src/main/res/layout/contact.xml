<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:padding="5dip"
              android:longClickable="true"
              android:onClick="updateContact">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="300dp"
            android:layout_height="wrap_content" android:id="@+id/item_data">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="444dp"
                android:layout_height="match_parent">
            <TextView
                    android:layout_width="126dp"
                    android:layout_height="wrap_content" android:id="@+id/last_name" android:textSize="24sp"
                    android:textColor="#000000"/>
            <TextView
                    android:layout_width="126dp"
                    android:layout_height="wrap_content" android:id="@+id/first_name" android:textSize="24sp"
                    android:textColor="#000000"/>
        </LinearLayout>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/job" android:textSize="18sp"
                android:textColor="#4CAF50"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/phone" android:textColor="#4CAF50"
                android:textSize="18sp"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/email" android:textColor="#242424"/>
        <TextView
                android:layout_width="0dp"
                android:layout_height="0dp" android:id="@+id/id" android:visibility="invisible"/>
    </LinearLayout>
    <ImageView
            android:layout_width="52dp"
            android:layout_height="51dp" app:srcCompat="@drawable/call" android:id="@+id/imageView"
            android:layout_weight="1" android:layout_marginTop="10dp"
            android:onClick="call"
    />
</LinearLayout>